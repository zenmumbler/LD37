{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "rootDir": "src",
        "outFile": "build/ld37.js",
        "noEmitOnError": true,

        "strict": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,

        "noUnusedLocals": false,
        "noUnusedParameters": false,
 
        "removeComments": true,
        "sourceMap": false,

        "lib": ["es5", "dom", "es2015", "es2016", "es2017"]
     },
    "exclude": [
        "build",
        "data",
        "sources"
    ]
}
